<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="60">    
  <appenders>    
    <Console name="Console" target="SYSTEM_OUT">    
      <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>    
      <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n"/>    
    </Console>    
    <RollingFile name="RollingFile" fileName="logs/lytzapp.log"    
                 filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz"  append="true">    
      <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"/>    
      <SizeBasedTriggeringPolicy size="50 MB" />    
      <DefaultRolloverStrategy max="10" />
    </RollingFile>    
    <Async name="Async">
        <AppenderRef ref="RollingFile" />
    </Async>
  </appenders>    
  <loggers>
    <logger name="com.lytz" additivity="fase" level="trace">
        <AppenderRef ref="Async" level="trace"/>
    </logger>    
    <root level="info">    
      <AppenderRef ref="Async"/>
    </root>    
  </loggers>    
</configuration>   